@using BikeToIt.ViewModels
@model SearchResultsViewModel




    <div class="container">
        <table class=" table centered-table">
            <h1>Search Results</h1>



            <tr>
                <th>Trail Name</th>
                <th>Cities</th>
                <th>State</th>
                <th>Distance</th>
                <th>Surface Type</th>
            </tr>
            @if (Model.Trails.Count == 0)
            {
                <h2 style="color:red">There are no trails that match your search.</h2>
            }



            @foreach (var trail in Model.Trails)
            {

                <tr>
                    <td >@trail.Name</td>
                    <td>
                        <ul>
                            @foreach (var c in Model.Cities)
                            {
                                @foreach (var city in Model.TrailCity)
                                {
                                    if ((trail.Id == city.TrailId) && (city.CityId == c.Id))
                                    {
                                        <li>@c.Name</li>


                                    }
                                }
                            }
                        </ul>
                    </td>
                    <td>@trail.State</td>
                    <td>@trail.Distance</td>
                    <td>@trail.SurfaceType</td>

                </tr>
            }





        </table>
    </div>


