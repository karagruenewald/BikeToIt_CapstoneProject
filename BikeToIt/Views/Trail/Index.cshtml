@model BikeToIt.ViewModels.SearchEventViewModel

<h1>Search for trails and trail destinations!</h1>

<form class="form"method="post" asp-controller="Trail" asp-action="/Results">
    <div class="form-group">
        <label asp-for="State"></label>
        <select asp-for="State" asp-items="Model.State"></select>
    </div>
    <div class="form-group">
        <label asp-for="CityId">City</label>
        <select asp-for="CityId" asp-items="Model.City"></select>
    </div>

</form>