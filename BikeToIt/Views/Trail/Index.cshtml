@model BikeToIt.ViewModels.SearchTrailViewModel



<form method="post" asp-controller="Trail" asp-action="Results">
    <div class="container">
        <div class="form-group">
            <h1>Search for Trails and Trail Destinations:</h1>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control form-control-lg" asp-for="Name" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="State"></label>
            <select class="form-control form-control-lg" asp-for="State" asp-items="Model.State" name="state"></select>
        </div>
        <div class="form-group">
            <label asp-for="CityId">City</label>
            <select class="form-control form-control-lg" asp-for="CityId" asp-items="Model.City" name="city"></select>
        </div>
        <div class="form-group">
            <label asp-for="Distance"></label>
            <input class="form-control form-control-lg" asp-for="Distance" value="" />
        </div>
        <div class="form-group">
            <label asp-for="SurfaceType"></label>
            <input class="form-control form-control-lg" placeholder="Search for asphalt, gravel, limestone, etc." asp-for="SurfaceType" /><br />
            <span></span>
        </div>

        <div class="form-group">
            <label>Select trails with certain destinations: </label><br />

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="fooddrink" id="food" />
                <label class="form-check-label" for="food">
                    Food and Drink
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="park" id="park" />
                <label class="form-check-label" for="park">
                    Park
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="shop" id="shop" />
                <label class="form-check-label" for="shop">
                    Shop
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="camping" id="camping" />
                <label class="form-check-label" for="camping">
                    Camping
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="other" id="other" />
                <label class="form-check-label" for="other">
                    Other
                </label>
            </div>
            


