        {                                                                               //park
            <input class="form-control form-control-lg" asp-for="@Model.DestinationCategoryCheckbox " type="checkbox" name="@category.Name)" />
            <label asp-for="@category.Id">@category.Name</label>
            <input asp-for="@category.Id" type="hidden" />
            <input asp-for="@category.Name" type="hidden" />

        }*@
        </div>

        <input class="btn btn-primary btn-lg btn-block" type="submit" value="Search" />
    </div>

</form>